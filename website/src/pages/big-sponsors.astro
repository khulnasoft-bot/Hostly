<style>
  .description-container {
    height: 0;
    overflow: hidden;
    transition: height 0.3s ease-out;
    background: rgba(23, 23, 23, 0.9);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 2rem;
  }

  .description-container.active {
    height: 120px;
  }

  .sponsors-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    max-width: 1400px;
    margin: 0 auto;
  }

  .sponsor-item {
    transition: all 0.2s ease;
    position: relative;
    aspect-ratio: 16/9;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.4rem;
    max-width: 200px;
    margin: 0 auto;
  }

  .sponsor-item img {
    width: auto;
    height: auto;
    object-fit: contain;
    min-width: 60px;
    min-height: 50px;
    max-width: 160px;
    max-height: 80px;
    transition: transform 0.2s ease;
  }

  /* Special handling for specific SVG logos that need size adjustment */
  .sponsor-item img[src*=".svg"] {
    max-height: 50px;
  }

  /* Specific adjustments for logos that need different sizing */
  .sponsor-item img[src*="arcjet.svg"],
  .sponsor-item img[src*="tigris.svg"],
  .sponsor-item img[src*="algora.svg"],
  .sponsor-item img[src*="liquid.svg"],
  .sponsor-item img[src*="massivegrid.svg"],
  .sponsor-item img[src*="syntax.svg"] {
    max-width: 190px;
    max-height: 120px;
  }

  .sponsor-item img[src*="pfglabs.svg"] {
    min-width: 10px;
    min-height: 35px;
    max-width: 100px;
    max-height: 35px;
  }

  .sponsors-grid:hover .sponsor-item:not(:hover) {
    opacity: 0.3;
    transform: scale(0.95);
  }

  .sponsor-item:hover {
    transform: scale(1.1);
    z-index: 1;
  }

  @media (max-width: 1024px) {
    .sponsors-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 640px) {
    .sponsors-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

